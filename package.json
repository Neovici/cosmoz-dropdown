{
	"name": "@neovici/cosmoz-dropdown",
	"version": "3.2.0",
	"description": "A simple dropdown web component",
	"keywords": [
		"lit-html",
		"web-components"
	],
	"homepage": "https://github.com/neovici/cosmoz-dropdown#readme",
	"bugs": {
		"url": "https://github.com/neovici/cosmoz-dropdown/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/neovici/cosmoz-dropdown.git"
	},
	"license": "Apache-2.0",
	"author": "",
	"main": "dist/index.js",
	"directories": {
		"test": "test"
	},
	"scripts": {
		"lint": "tsc && eslint --cache .",
		"build": "tsc -p tsconfig.build.json",
		"start": "wds",
		"test": "wtr --coverage",
		"test:watch": "wtr --watch",
		"storybook:build": "build-storybook",
		"storybook:deploy": "storybook-to-ghpages",
		"prepare": "husky install"
	},
	"release": {
		"plugins": [
			"@semantic-release/commit-analyzer",
			"@semantic-release/release-notes-generator",
			"@semantic-release/changelog",
			"@semantic-release/github",
			"@semantic-release/npm",
			"@semantic-release/git"
		],
		"branch": "master",
		"preset": "conventionalcommits"
	},
	"publishConfig": {
		"access": "public"
	},
	"files": [
		"dist/",
		"types"
	],
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		],
		"rules": {
			"body-max-line-length": [
				1,
				"always",
				100
			]
		}
	},
	"exports": {
		".": "./dist/index.js",
		"./use-focus": "./dist/use-focus.js",
		"./use-position": "./dist/use-position.js",
		"./src/use-focus.js": "./dist/use-focus.js",
		"./src/use-position.js": "./dist/use-position.js"
	},
	"dependencies": {
		"@neovici/cosmoz-utils": "^5.0.0",
		"haunted": "^5.0.0",
		"lit-html": "^2.0.0",
		"position.js": "^0.3.0"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.0.0",
		"@commitlint/config-conventional": "^17.0.0",
		"@neovici/cfg": "^1.15.2",
		"@open-wc/testing": "^3.0.0",
		"@semantic-release/changelog": "^6.0.0",
		"@semantic-release/git": "^10.0.0",
		"@storybook/storybook-deployer": "^2.8.5",
		"@web/dev-server-storybook": "^0.7.0",
		"husky": "^8.0.0",
		"semantic-release": "^21.0.0",
		"sinon": "^15.0.0",
		"typescript": "^5.0.0"
	}
}
